{
  "name": "api-contract-guardian",
  "version": "1.0.0",
  "description": "CLI tool for API contract testing and governance",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "api-guardian": "dist/bin/api-guardian.js"
  },
  "license": "MIT",
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsc --project tsconfig.json && test -f dist/bin/api-guardian.js && chmod +x dist/bin/api-guardian.js || true",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "link": "npm link"
  },
  "keywords": [
    "api",
    "contract",
    "testing",
    "governance",
    "cli"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@api-contract-guardian/core": "*",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
