{
  "name": "api-contract-guardian",
  "version": "1.0.0",
  "description": "A Production-Ready Contract Testing & Governance Tool for OpenAPI-First Development",
  "private": true,
  "license": "MIT",
  "keywords": [
    "api",
    "contract",
    "testing",
    "governance",
    "openapi",
    "specification",
    "validation"
  ],
  "author": "Your Name <your.email@example.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/api-contract-guardian"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverage-reporters=text --coverage-reporters=html",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"packages/**/*.{ts,tsx,json,yaml,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,json,yaml,md}\"",
    "clean": "npm run clean --workspaces --if-present && rm -rf coverage .eslintcache",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
